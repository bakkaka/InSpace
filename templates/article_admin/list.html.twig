{% extends 'content_base.html.twig' %}
{% block content_body %}
    <a href="{{ path('admin_article_new') }}" class="btn btn-primary pull-right">
        Create <span class="fa fa-plus-circle"></span>
    </a>
    <h1>All Articles</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>

            <th>Published?</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.author }}</td>

                <td>
                    {{ article.publishedAt ? article.publishedAt.date| ago : 'unpublished' }}
                </td>
                <td>
                    <a href="{{ path('admin_article_edit', {id: article.id
                    }) }}">Update
                        <span class="fa fa-pencil"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_article_delete', {id: article.id
                    }) }}">Delete
                        <span class="fa fa-trash-o"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}