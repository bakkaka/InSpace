{% extends 'base.html.twig' %}

{% block title %}Hello PropertyController!{% endblock %}

{% block body %}

 <div class="jumbotron">
    <div class="container">
      {{ form_start(form) }}
      <div class="form-row align-items-end">
        <div class="col">
          {{ form_row(form.minSurface) }}
        </div>
        <div class="col">
          {{ form_row(form.maxPrice) }}
        </div>
        <div class="col">
          {{ form_row(form.options) }}
        </div>
        <div class="col">
          {{ form_row(form.address, {id: 'search_address'}) }}
        </div>
        <div class="col">
          {{ form_row(form.distance) }}
        </div>
        <div class="col">
          <div class="form-group">
            <button class="btn btn-primary">Rechercher</button>
          </div>
        </div>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
<div class="container mt-4">
<h1> Manage Mobiles ({{ properties.getTotalItemCount }})</h1>
<div class="row">
{% for property in properties %}
<div class="col-md-4">
{% include 'property/_property.html.twig'%}
</div>
    
{% endfor %}

</div>
<ul class="pagination">
<li>
 {{ knp_pagination_render(properties) }}
 </li>
</ul>
</div>
{% endblock %}
